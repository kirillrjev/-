[32m+[m[32mpublic class UsersMemoryRepository : IUserRepository[m
[32m+[m[32m{[m
[32m+[m[32m    public List<User> Users { get; set; } = new List<User>();[m
[32m+[m
[32m+[m[32m    public User CreateUser(User user)[m
[32m+[m[32m    {[m
[32m+[m[32m        Users.Add(user);[m
[32m+[m[32m        return user;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public bool DeleteUser(int id)[m
[32m+[m[32m    {[m
[32m+[m[32m        var result = FindUserById(id);[m
[32m+[m[32m        Users.Remove(result);[m
[32m+[m[32m        return true;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public User EditUser(User user, int id)[m
[32m+[m[32m    {[m
[32m+[m[32m        var result = FindUserById(id);[m
[32m+[m[32m        result.Name = user.Name;[m
[32m+[m[32m        return result;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public User FindUserById(int id)[m
[32m+[m[32m    {[m
[32m+[m[32m        var result = Users.Where(u => u.Id == id).FirstOrDefault();[m
[32m+[m
[32m+[m[32m        if (result == null)[m
[32m+[m[32m        {[m
[32m+[m[32m            throw new Exception($"–ù–µ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è —Å id = {id}");[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        return result;[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    public List<User> GetUsers()[m
[32m+[m[32m    {[m
[32m+[m[32m        return Users;[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
