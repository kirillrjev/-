[32m+[m[32mpublic class UserValidator : AbstractValidator<User>[m
[32m+[m[32m{[m
[32m+[m[32m    public UserValidator()[m
[32m+[m[32m    {[m
[32m+[m[32m        RuleFor(u => u.Name)[m
[32m+[m[32m            .NotEmpty().WithMessage("–ò–º—è –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ")[m
[32m+[m[32m            .Length(2, 50).WithMessage("–ò–º—è –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –æ—Ç 2 –¥–æ 50 —Å–∏–º–≤–æ–ª–æ–≤")[m
[32m+[m[32m            .Must(StartsWithCapitalLetter).WithMessage("–ò–º—è –¥–æ–ª–∂–Ω–æ –Ω–∞—á–∏–Ω–∞—Ç—å—Å—è —Å –∑–∞–≥–ª–∞–≤–Ω–æ–π –±—É–∫–≤—ã");[m
[32m+[m[41m            [m
[32m+[m[32m        RuleFor(u => u.Id)[m
[32m+[m[32m            .GreaterThan(0).WithMessage("ID –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω—ã–º —á–∏—Å–ª–æ–º");[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    private bool StartsWithCapitalLetter(string name)[m
[32m+[m[32m    {[m
[32m+[m[32m        if (string.IsNullOrEmpty(name)) return false;[m
[32m+[m[32m        return char.IsUpper(name[0]);[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
